{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "ES2020"
    ],
    "module": "Node18",
    "moduleResolution": "Node16",
    "newLine": "lf",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES2020",
  },
  "include": ["./src/**/*", "./bin/**/*", "LICENSE"],
  "exclude": ["./node_modules/", "./dist/", "./tests/"]
}
