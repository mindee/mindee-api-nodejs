{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2015"],
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": false,
    "paths": {
        "@mindee/*": ["mindee/*"],
      }
  },
  "include": [
    "./src/**/*.ts",
    "./bin/**/*"
  ],
  "exclude": ["./node_modules/", "./dist/", "./tests/"]
}
