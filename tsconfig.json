{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2015"],
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": false,
    "newLine": "lf",
    "paths": {
        "@mindee/*": ["./src/*"],
      }
  },
  "include": ["./src/**/*", "./bin/**/*"],
  "exclude": ["./node_modules/", "./dist/", "./tests/"]
}
